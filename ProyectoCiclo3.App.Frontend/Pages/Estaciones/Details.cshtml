@page
@model ProyectoCiclo3.App.Frontend.Pages.DetailsEstacionesModel
@{
    var estacion = Model.Estacion;
}
 
<ul class="list-group list-group-flush">
  <h1 style="background: linear-gradient(#000046, #2f4f4f); color: #dcdcdc">Detalles</h1>
  <li class="list-group-item" style="background:#d3d3d3"> <b>id: </b> @estacion.id</li>
