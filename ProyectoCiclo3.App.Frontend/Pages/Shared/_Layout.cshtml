<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión de transporte</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color:#fdfd8d">
    
    <header style="background-color:#fdfd8d">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div style="background: linear-gradient(#ffbf47, #fdfd8d);border:2px solid black;" class="container">
                <a style="font-size:1.5rem" class="navbar-brand" asp-area="" asp-page="/Index">Bienvenid@S</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div style="background: linear-gradient(#ffbf47, #fdfd8d)" class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" style="font-size:1.5rem; background: linear-gradient(#ffbf47, #fdfd8d)">
                            Buses
                            </a>
                            <ul class="dropdown-menu" style="background: linear-gradient(#ffbf47, #fdfd8d);border:2px solid black">
                                <li><a class="dropdown-item" href="/Buses/Create">Registro de Buses</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Buses/List">Listado de Buses</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" style="font-size:1.5rem; background: linear-gradient(#ffbf47, #fdfd8d)">
                            Estaciones
                            </a>
                            <ul class="dropdown-menu" style="background: linear-gradient(#ffbf47, #fdfd8d);border:2px solid black">
                                <li><a class="dropdown-item" href="/Estaciones/Create">Registro de Estaciones</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Estaciones/List">Listado de Estaciones</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" style="font-size:1.5rem; background: linear-gradient(#ffbf47, #fdfd8d)">
                            Rutas
                            </a>
                            <ul class="dropdown-menu" style="background: linear-gradient(#ffbf47, #fdfd8d);border:2px solid black">
                                <li><a class="dropdown-item" href="/Rutas/Create">Registro de Rutas</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Rutas/List">Listado de Rutas</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div style="background-color:rgb(255, 191, 81);" class="container">
            &copy; 2021 - GRUPO 25 EQUIPO COLABORATIVO 3 - MINTIC - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
